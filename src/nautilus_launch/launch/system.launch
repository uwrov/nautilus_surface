<launch>
  <arg name="pi_ip" default="192.168.8.99" />

  <machine name="pi" address="$(arg pi_ip)" user="pi" password="raspberry" env-loader="/home/pi/2020-2021/pi_env.sh" />

  <group ns="surface_control">
    <node name="server" pkg="uwrov_server" type="main_server.py" output="screen"/>
    <node name="interface" pkg="uwrov_interface" type="launch_interface.bash"/>
    
    <node name="motors" pkg="nautilus_motors" type="motor_driver.py" output="screen"/>
  </group>

  <group ns="pi">
    <node machine="pi" name="pigpio_launcher" pkg="?" type="pig.sh"/>

    <node machine="pi" name="motor_driver" pkg="uwrov_auto" type="motor_driver.py"/>
  </group>
</launch>
